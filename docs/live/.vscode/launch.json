{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost (works, with node js running)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}"
            //"userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome (use flagged shortcut)",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}